[Desktop Entry]
Name=@PROJECT_NAME@
Comment=A modern metronome for musicians
GenericName=Metronome
Exec=tempo
Icon=@APPLICATION_ID@
Terminal=false
Type=Application
Categories=AudioVideo;Audio;Music;
Keywords=metronome;music;tempo;timing;practice;rhythm;beat;BPM;
StartupNotify=true
StartupWMClass=tempo
MimeType=audio/x-tempo;
Actions=QuickStart;Preferences;

[Desktop Action QuickStart]
Name=Quick Start
Exec=tempo --start
Icon=@APPLICATION_ID@

[Desktop Action Preferences]
Name=Preferences
Exec=tempo --preferences
Icon=preferences-system