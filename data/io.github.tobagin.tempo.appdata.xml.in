    </screenshot>
  </screenshots>
  
  <url type="homepage">https://github.com/tobagin/tempo</url>
  <url type="bugtracker">https://github.com/tobagin/tempo/issues</url>
  <url type="help">https://github.com/tobagin/tempo/discussions</url>
  
  <categories>
    <category>Audio</category>
    <category>Music</category>
    <category>AudioVideo</category>
    <category>Utility</category>
  </categories>
  
  <keywords>
    <keyword>metronome</keyword>
